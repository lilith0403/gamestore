// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Game{
  id String @id
  name String
  genre String
  rating Float
}

model User{
  id Int @id @default(autoincrement()) 
  createdAt DateTime @default(now())
  updatedAt  DateTime @updatedAt

  email String @unique
  hash String
  hashRt String?

  @@map("users")
}